                  "destination": "LAX", "emptySeats": 52, "planetype": "Boeing 777", 
                  "totalseats": 300}]


      
  post:
    body:
      application/json:
        example: |
            {"ID":1, "code": "ER38sd","price": 400, "origin": "MUA",
                "destination": "SFO", "emptySeats": 0, "planetype": 
                "Boeing 737", "totalseats": 150}
    responses: 
      201:
        body:
          application/json:
            example: |
              {"message": "Flight added (but not really)"}

  /{ID}:
     get:
      responses: 
        200:
         body:
          application/json:
            example: |
              {"ID":1, "code": "ER38sd","price": 400, "origin": "MUA",
