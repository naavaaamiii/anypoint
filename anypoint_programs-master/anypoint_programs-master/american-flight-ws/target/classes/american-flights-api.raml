version: 1.0

/flights:
  get:
    responses:
      200:
        body:
          appication/json:
            example: |
               [{"ID":1, "code": "ER38sd","price": 400,
                 "origin": "MUA", "destination": "SFO", "emptySeats": 0, 
                 "planetype": "Boeing 666", "totalseats": 400},
